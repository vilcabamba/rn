@import "../variables"

body
  background-color: $color-gray-text

#header
  .container-out
    background-color: white
  #logo
    max-height: 45px
    margin: 8px 40px

  #navigation
    position: absolute
    top: 0
    .menu-item a
      color: #000
      // font: 400 14px/1.7em "Helvetica Neue", Helvetica, sans-serif
      font: 600 13px/1.2em "Raleway", sans-serif
      letter-spacing: -0.025em
      &:hover
        color: $color-orange
    .current_page_item a
      color: $color-orange

.section_template
  background-image: url(<%= asset_path "banner.jpg" %>)
  background-repeat: no-repeat
  background-position: 50% 0px
  background-attachment: fixed
  background-size: cover
  h1
    text-transform: uppercase
    position: relative
    color: white
    text-shadow: 1px 1px 0 black
    font: 700 65px/1.2em "Montserrat", sans-serif

  &.section_template_white_bg
    background: white
    h1
      color: #1E4D81
      &::after
        content: ""
        position: absolute
        width: 60px
        height: 1.5px
        bottom: 0
        left: 0
        right: 0
        margin: -0.2em auto
        background: $color-orange

.body2
  background-color: #ffffff

#footer,#footer a, #footer h2,#header h1 a
  color: black

h2,h1.singletitle
  font: 700 50px/1.2em "Montserrat" sans-serif

#footer h2
  text-transform: uppercase !important
  letter-spacing: -0.025em

input, textarea, input checkbox, input radio, select, file
  float: none
form
  margin-top: 4em
.form-group
  text-align: left

label
  margin-bottom: 5px !important
  text-transform: uppercase
  color: $color-orange
  font-weight: 500t

textarea.form-control
  height: 150px
  max-height: 350px
  font-style: normal
  font-weight: normal
  resize: vertical

  &::placeholder
    font-style: italic
    font-weight: 300

.form-control
  border-radius: 0
  border: none
  border-left: 4px solid $color-orange
  box-shadow: none
  background: $input-background

  &:focus
    border-color: $color-orange
    box-shadow: inset 0 1px 1px rgba(0,0,0,0), 0 0 8px rgba(233, 169, 103, 0.6)

.form-group
  .input-group
    .input-group-addon
      border: 0
      border-radius: 0
      border-left: 4px solid $color-orange
      background: $input-background
      cursor: default
    .form-control
      border-left: 1px solid white

.btn
  border-radius: 0
  &.btn-primary
    border: none
    background: $color-orange
    color: white

    &:hover
      background: $color-orange-hover
      color: white

    &:focus
      color: white
      background-color: $color-orange-hover
